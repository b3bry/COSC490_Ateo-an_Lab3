<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-responsive">
    <h3>To-Do List</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Due</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.due %></td>
            <td><%= link_to 'Edit', edit_task_path(task) , :class => 'btn btn-success'%></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New Task', new_task_path, :class => 'btn btn-primary btn-block' %>
</div>

